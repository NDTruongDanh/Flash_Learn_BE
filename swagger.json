          },
          "colorCode": {
            "type": "string",
            "description": "Color code in hex format (e.g., #FF5733)"
          },
          "languageMode": {
            "type": "string",
            "enum": [
              "VN_EN",
              "EN_VN",
              "BIDIRECTIONAL"
            ],
            "default": "VN_EN",
            "description": "Language mode: VN_EN (Vietnamese to English), EN_VN (English to Vietnamese), or BIDIRECTIONAL (both directions with auto-generated reverse cards)"
